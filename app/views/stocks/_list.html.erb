<table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
	<th>Symbol</th>
	<th>Price</th>
	<% if @user.id == current_user.id %>
	  <th>Action</th>
	<% end %>
      </tr>
    </thead>
   
    <tbody>
      <% @user_stocks.each do |user_stock| %>
	<tr>
	  <td><%= user_stock.name %></td>
	  <td><%= user_stock.ticker %></td>
	  <td><%= user_stock.price %></td>
          <% if @user.id == current_user.id %>
	    <td><%= link_to "Delete", user_stock_path(user_stock.find_user_stock(current_user)), method: :delete, data: {confirm:"Are you sure you want to delete this stock?"}, class:"btn btn-xs btn-danger" %></td>
	  <% end %>
        </tr>
      <% end %>
    </tbody>
</table>

