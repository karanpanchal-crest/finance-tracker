<%#= render 'friends/lookup' %>

<% if @friendships.size > 0 %> 

  <table class="table table-striped">
    <thead>
      <tr colspan="3"><h1>My Friends</h1></tr>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
	  <td><%= friend.email %></td>
	  <td><%= link_to "View Profile", user_path(friend), class: "btn btn-primary btn-success" %>
              <%= link_to "Remove Friend", friendship_path(friend), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table> 

<% else %>
  <div class="col-lg-12">
    <p class="page-header"> You don't have any friends yet!! Make some friends</p>
  </div> 
<% end %>
