<h2>User Details</h2>

<div style="float:right;margin-right:10px;">
  <% if current_user.not_friends_with?(@user.id) %>
    <%= link_to "Add user as friend", add_friend_path(user:current_user, friend:@user), method: :post, class:"btn btn-xs btn-success" %>
  <% else %>
    <span class="label label-primary">You are friends</span>
  <% end %>
 
</div>


<dl class="dl-horizontal">
  <dt><strong>Name</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user_stocks.size > 0 %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks %</p>
<% end %>

<%= link_to "Back", my_friends_path, class:"btn btn-primary" %>
